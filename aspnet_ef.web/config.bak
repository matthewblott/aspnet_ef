<?xml version="1.0" encoding="utf-8"?>

<nlog autoReload="true"
      throwConfigExceptions="true"
      internalLogLevel="info"
      internalLogFile="nlog_internal.log">

  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore" />
  </extensions>

  <!-- the targets to write to -->
  <targets>
    <!-- <target type="File" name="target1" fileName="./${shortdate}.log" -->
    <!--         layout="${date:format=yyyy-MM-dd HH\:mm\:ss.fff} | ${level:uppercase=true} | ${message} ${exception} | ${logger} | ${all-event-properties}" /> -->

    <!-- <target type="Console" name="target2" -->
    <!--         layout="${date:format=yyyy-MM-dd HH\:mm\:ss.fff} | ${level:uppercase=true} | ${message} ${exception} | ${logger} | ${all-event-properties}" /> -->

    <!-- write logs to file  -->
    <target type="File" name="allfile" fileName="nlog-all-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" />

    <!-- another file log, only own logs. Uses some ASP.NET core renderers -->
    <target type="File" name="ownFile-web" fileName="nlog-own-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}|${callsite}" />
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <!-- Microsoft.EntityFrameworkCore.Database.Command -->


    <!--All logs, including from Microsoft-->
    <logger name="*" minlevel="Info" writeTo="allfile" />

    <!--Skip non-critical Microsoft logs and so log only own logs-->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />  <!-- BlackHole without writeTo -->

    <logger name="*" minlevel="Debug" writeTo="ownFile-web" />

    <!-- <logger name="*" minlevel="Trace" writeTo="target1" final="false" enabled="true" /> -->
    <!-- set the final attribute above to true to run the rules below -->
    <!-- <logger name="*" minlevel="Trace" writeTo="target2" /> -->
    <!-- <logger name="Microsoft.*" maxlevel="Info" final="true" />  -->
    <!-- <logger name="*" minlevel="Trace" writeTo="ownFile-web" /> -->



  </rules>



</nlog>